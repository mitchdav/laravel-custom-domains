{
  on_demand_tls {
    ask {{INJECT_ASK_URL}}
  }

  log default {
    output file /var/log/caddy/caddy.log {
      roll_size 10MiB
      roll_uncompressed
    }

    format json {
      time_key timestamp
      time_format iso8601
    }
  }

  storage_clean_interval 32d
}

:80 {
  respond /health "Healthy" 200
}

:443 {
  tls {{INJECT_EMAIL}} {
    on_demand
  }

  log {
    output file /var/log/caddy/access.log {
      roll_size 10MiB
      roll_uncompressed
    }

    format json {
      time_key timestamp
      time_format iso8601
    }
  }

  reverse_proxy * https://{{INJECT_TARGET_URL}} {
    header_up Host {{INJECT_TARGET_URL}}
    header_up {{INJECT_HEADER}} {host}
    health_timeout 5s
  }
}