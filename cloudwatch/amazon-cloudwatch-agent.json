          {
            "file_path":        "/var/log/caddy/caddy*.log",
            "log_group_name":   "/aws/ec2/{{INJECT_UNIQUE_PREFIX}}/caddy",
            "log_stream_name":  "{instance_id}",
            "timezone":         "UTC",
            "timestamp_format": "%Y-%m-%dT%H:%M:%S.%f%Z"
          }
        ]
      }
    }
  }
